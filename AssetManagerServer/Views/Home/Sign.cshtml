@model AssetManagerServer.Models.User
@{
    Layout = null;
}
 
<!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Вход</title>
</head>
<body>
<div>
    <h3>Invest Manager Inc.</h3>
    @using (Html.BeginForm("Sign", "Home", FormMethod.Post))
    {
        @Html.LabelFor(model => model.Name, "Логин:")
        @Html.TextBoxFor(model => model.Name)<br/><br/>
        @Html.LabelFor(model => model.Password, "Пароль:")
        @Html.PasswordFor(model => model.Password)<br/><br/>
        <a href="/Home/Register/">Регистрация</a>
        <input type="submit" value="Войти"/><br/>
        <b>@(ViewBag.NotifyMessage)</b>
    }
</div>
</body>
</html>